#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#define MAX_SIZE 100
struct Stack {
    int top;
    char items[MAX_SIZE];
};
void initialize(struct Stack *s) {
    s->top = -1;
}
void push(struct Stack *s, char c) {
    s->items[++s->top] = c;
}
char pop(struct Stack *s) {
    return s->items[s->top--];
}
int isEmpty(struct Stack *s) {
    return s->top == -1;
}
int checkBalancedParentheses(char *exp) {
    struct Stack s;
    initialize(&s);
    for (int i = 0; exp[i]; i++) {
        if (exp[i] == '(') {
            push(&s, exp[i]);
        } else if (exp[i] == ')') {
            if (isEmpty(&s)) {
                return 0;
            }
            pop(&s);
        }
    }
    return isEmpty(&s);
}
int main() {
    char exp[MAX_SIZE];
    printf("Enter an expression: ");
    scanf("%s", exp);
    if (checkBalancedParentheses(exp)) {
        printf("Parentheses are balanced.\n");
    } else {
        printf("Parentheses are not balanced.\n");
    }
    return 0;
}
